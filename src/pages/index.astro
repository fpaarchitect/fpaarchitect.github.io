---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home">
	<section
		class="mx-auto grid max-w-screen-xl gap-8 px-4 py-32 sm:grid-cols-[1fr_2fr] sm:gap-4"
	>
		<div>
			<Image
				class="mb-4 h-[360px] object-cover sm:h-[480px]"
				src={import("/src/assets/olga.jpg")}
				alt="Olga Podushkina"
			/>
			<p>Architect: Olga Podushkina</p>
		</div>

		<header class="flex items-center justify-center">
			<h1 class="text-center font-heading text-4xl">
				This website is under construction
			</h1>
		</header>
	</section>
</Layout>
