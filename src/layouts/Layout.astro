---
import { Image } from "astro:assets";
import "../styles/global.css";
import "@fontsource-variable/outfit";
import "@fontsource-variable/open-sans";

interface Props {
	title: string;
}

const { title } = Astro.props;

// html h-full, body flex min-h-full flex-col, main flex-1
---

<!doctype html>
<html class="h-full" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="FPA Architect" />
		<meta
			name="google-site-verification"
			content="FhxV8MYjX8IG22_UdZa41VvtIszHWi1NC0R9Hm8qZEg"
		/>

		<link rel="icon" type="image/png" href="/olga_favicon.png" />
		<link rel="sitemap" href="/sitemap-index.xml" />

		<title>{`${title} - FPA Architect`}</title>
	</head>

	<body class="flex min-h-full flex-col bg-black text-gray-100">
		<nav>
			<ul class="flex items-center justify-center gap-4 p-4">
				<li class="hover:text-white hover:underline"><a href="/">HOME</a></li>
				<li class="hover:text-white hover:underline">
					<a href="/projects">PROJECTS</a>
				</li>
				<li class="hover:text-white hover:underline">
					<a href="/about">ABOUT</a>
				</li>
			</ul>
		</nav>

		<main class="flex-1">
			<slot />
		</main>

		<footer
			class="flex items-center justify-center gap-2 border-t-2 border-gray-400 p-2"
		>
			<p class="text-gray-400">olga@fpa-architect.org</p>
			<a href="https://www.linkedin.com/in/ольга-подушкина-a4742168">
				<Image
					class="object-contain"
					src={import("/src/assets/LI-In-Bug-White.png")}
					alt="LinkedIn"
					width={32}
					height={32}
				/>
			</a>
			<a href="https://www.facebook.com/olga.podushkina">
				<Image
					class="object-contain"
					src={import("/src/assets/Facebook_Logo_Primary.png")}
					alt="Facebook"
					width={32}
					height={32}
				/>
			</a>
		</footer>
	</body>
</html>
